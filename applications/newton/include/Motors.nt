include "NewtonBaseSignals.nt"

# Hitachi HS-40 Nano Servo - 
# https://hitecrcd.com/products/servos/micro-and-mini-servos/analog-micro-and-mini-servos/hs-40/product
HS40_OperatingVoltage_Minimum           : constant = 4.8 * V;
HS40_OperatingVoltage_Maximum           : constant = 6.0 * V;
HS40_Maximum_Torque                     : constant = 0.6 * (100) * kg / m;
HS40_CurrentDraw_Idle                   : constant = 8 * (1/1000) * A;
HS40_CurrentDraw_NoLoad                 : constant = 60 * (1/1000) * A;
HS40_CurrentDraw_Stall                  : constant = 480 * (1/1000) * A;

# Hitachi HS-35HD Ultra Nano Servo - 
# https://hitecrcd.com/products/servos/discontinued-servos-servo-accessories/hs-35hd-ultra-nano-servo/product
HS35HD_OperatingVoltage_Minimum         : constant = 4.8 * V;
HS35HD_OperatingVoltage_Maximum         : constant = 6.0 * V;
HS35HD_Maximum_Torque                   : constant = 0.08 * (100) * kg / m;
HS35HD_CurrentDraw_Idle                 : constant = 8 * (1/1000) * A;
HS35HD_CurrentDraw_NoLoad               : constant = 60 * (1/1000) * A;
HS35HD_CurrentDraw_Stall                : constant = 360 * (1/1000) * A;

